<h1>Show Order</h1>

<% total_price = 0 %>
<% @uniq_products.each do |product| %>

  <div class="myproducts">
    <p id="product">
      <strong><%= product.name %> : </strong>
      <%= number_to_currency(price =product.price) %>
      qty: <%= qty = @products.where(product_id: product).count %>
      total: <%= number_to_currency(subtotal = price * qty) %>
      <% total_price = total_price + subtotal %>
    </p>
    <hr>

  </div>
<% end %>
<u>
<strong>
  Grand Total: 
  <%= number_to_currency(total_price) %>
</strong>
</u>
<br>
<hr>