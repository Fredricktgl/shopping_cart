<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">

      <h3>Forgot your password?</h3></br>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <h5 class="card-title font-weight-light">Please enter your registered E-mail with us, instructions to reset your password will be send to your E-mail address.</h5></br>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Your E-mail address" %></br>
          <%= f.submit "Reset Password", class: "btn btn-primary" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>

